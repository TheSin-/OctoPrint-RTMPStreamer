<div id="rtmpstreamer_wrapper" data-bind="visible: view_url().length > 0">
	<iframe data-bind="attr: {src: view_url()}" frameborder="0" allowfullscreen></iframe>
</div>
<div class="row-fluid btn-group" style="text-align: center;padding-top: 20px;" data-bind="visible: settingsViewModel.settings.plugins.rtmpstreamer.stream_url().length > 0">
	<button class="btn" data-bind="click: toggleStream, css: btnclass, disable:processing"><i data-bind="css: icon" style="margin-right: 10px;"></i><span data-bind="text: streaming() ? 'Stop' : 'Start'"></span></button>
</div>
